version: '3.9'

services:
  openaibot:
    image: aiastia/openaibot:main
    command: python3 main.py
    volumes:
      - ./:/app
    depends_on:
      - redis
    networks:
      - app-tier
  redis:
    image: redis:latest
    volumes:
      - ./redis:/data
    ports:
      - 6379:6379
    depends_on:
      - BlipServer
    networks:
      - app-tier

networks:
  app-tier:
    driver: bridge
